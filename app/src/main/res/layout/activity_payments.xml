    <ImageView
        android:id="@+id/img_qrcode"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total bill: â‚¬130"
        android:id="@+id/tv1"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/img_qrcode"
        android:layout_alignStart="@+id/img_qrcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days exercised: 25"
        android:id="@+id/tv2"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_below="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last payment on: 05.11.2017"
        android:id="@+id/tv3"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_below="@+id/tv2"
        android:layout_alignStart="@+id/tv2"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/btn_done"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
